<p id="notice"><%= notice %></p>

<h1>Broods</h1>

<table>
  <thead>
    <tr>
      <th>Roster</th>
      <th>Max size</th>
      <th>Min size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @broods.each do |brood| %>
      <tr>
        <td><%= brood.roster_id %></td>
        <td><%= brood.max_size %></td>
        <td><%= brood.min_size %></td>
        <td><%= link_to 'Show', brood %></td>
        <td><%= link_to 'Edit', edit_brood_path(brood) %></td>
        <td><%= link_to 'Destroy', brood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

