<p id="notice"><%= notice %></p>

<h1>Options</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Optional</th>
      <th>Stats</th>
      <th>Weapon</th>
      <th>Wargear</th>
      <th>One or none</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.name %></td>
        <td><%= option.points %></td>
        <td><%= option.optional %></td>
        <td><%= option.stats %></td>
        <td><%= option.weapon %></td>
        <td><%= option.wargear %></td>
        <td><%= option.one_or_none %></td>
        <td><%= option.group %></td>
        <td><%= link_to 'Show', option %></td>
        <td><%= link_to 'Edit', edit_option_path(option) %></td>
        <td><%= link_to 'Destroy', option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

